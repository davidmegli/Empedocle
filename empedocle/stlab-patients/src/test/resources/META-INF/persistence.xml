<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="test" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>it.unifi.ing.stlab.users.model.User</class>
		<class>it.unifi.ing.stlab.users.model.Role</class>
		<class>it.unifi.ing.stlab.users.model.Qualification</class>

		<class>it.unifi.ing.stlab.wood-elements.model.WoodElement</class>
		<class>it.unifi.ing.stlab.wood-elements.model.WoodElementIdentifier</class>
		<class>it.unifi.ing.stlab.wood-elements.model.actions.WoodElementAction</class>
		<class>it.unifi.ing.stlab.wood-elements.model.actions.WoodElementCreateAction</class>
		<class>it.unifi.ing.stlab.wood-elements.model.actions.WoodElementModifyAction</class>
		<class>it.unifi.ing.stlab.wood-elements.model.actions.WoodElementMergeAction</class>
		<class>it.unifi.ing.stlab.wood-elements.model.actions.WoodElementSplitAction</class>
		<class>it.unifi.ing.stlab.wood-elements.model.actions.WoodElementDeleteAction</class>

		<properties>
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:testdb" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
	
</persistence>